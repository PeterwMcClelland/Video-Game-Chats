<h1 class="section-title mb-3 d-flex justify-content-start">Chatroom</h1>
{{> chatroom-info chatroom chat=true}}
{{#if loggedIn}}
  <form class="message-form">
    <div class="card">
      <div class="card-body bg-chat">
        {{> message chatroom.messages }}
        <input name="message-body" maxlength="250"></input>
        <div class="d-flex justify-content-center pt-3 pb-2">
          <button type="submit" class="btn-create">Message</button>
        </div>
      </div>
    </div>
  </form>
{{else}}
  <div class="d-flex justify-content-center">
    <button class="btn-add bg-danger" onclick="window.location.href='/login'">Login For More</button>
  </div>
{{/if}}
{{#if loggedIn }}
  <script src="/javascript/message.js"></script>
{{/if }}