{{#if chatrooms.length}}
  <h1 class="section-title mb-3 d-flex justify-content-center">{{console.name}}</h1>
  {{#each chatrooms as |chatroom|}}
    {{>chatroom-info chatroom }}
  {{/each}}
{{else}}
  <h1 class="section-title text-warning mb-3 d-flex justify-content-center pt-5">No chatrooms for {{console.name}}</h1>
{{/if}}