{{#if chatrooms.length}}
  <section>
    <h1 class="section-title mb-3 d-flex justify-content-end">Your Chatrooms</h1>
      {{#each chatrooms as |chatroom|}}
        <a href="/dashboard/edit/{{chatroom.id}}"><button class="chat-dash d-flex justify-content-between"><div>{{title}} - {{console.name}}</div><div>{{format_date created_at}}</div></button></a>
      {{/each}}
  </section>
{{/if}}
<div class="d-flex justify-content-center">
  <button class="btn-add" onclick="window.location.href='/dashboard/create'">Create New Chatroom</button>
</div>